  {
    "name": "HahahaDevContainer",
    "dockerFile": "../Dockerfile",
    // "image": "hahaha-dev",
    "build": {
        "args": {
          "IMAGE_NAME": "nvidia/cuda",
          "TARGETARCH": "amd64"
        }
    },
    "runArgs": [
        "--network=host" 
    ],
    "runArgs": [
      "--gpus", "all",
      "--privileged"
    ],
    "mounts": [
      "type=bind,source=${localWorkspaceFolder},target=/workspace"
    ],
    "workspaceFolder": "/workspace",
    "remoteUser": "root",
    "postCreateCommand": "mkdir -p /workspace/extern/externlibs && git clone --depth 1 https://github.com/ocornut/imgui.git /workspace/extern/externlibs/imgui",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-vscode.cpptools",
          "ms-python.python",
          "streetsidesoftware.code-spell-checker"
        ]
      }
    }
  }