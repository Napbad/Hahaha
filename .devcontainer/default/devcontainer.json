// Default Ubuntu-based DevContainer Template.
// For more customization options, see https://containers.dev/implementors/json_reference
{
  name: "HiahiahiaDevDefaultContainer",
  "dockerFile": "../../Dockerfile",
  "build": {
      "args": {
        "IMAGE_NAME": "nvidia/cuda",
        "TARGETARCH": "amd64"
      }
  },
 
  "mounts": [
    "type=bind,source=${localWorkspaceFolder},target=/workspace"
  ],

  customizations : {
    // Configure JetBrains IDE-specific properties
    jetbrains : {
      backend : "IntelliJ",
      settings : {
        // IDE settings can be added via “Show context actions”|“Add currently modified settings from IDE”.
        // A complete list of supported settings is also available through auto-completion
      },
      plugins: [
        // A set of plugin IDs.
        // Plugin ID can be found on the corresponding plugin’s page at https://plugins.jetbrains.com        docker run --rm --gpus all nvidia/cuda:12.4.1-base-ubuntu22.04 nvidia-smi.
      ]
    }
  },
  features: {
    "ghcr.io/devcontainers/features/git" : {},
    // Add additional features to your project using auto-completion.
  },
  // Use root user for development
  remoteUser: "root"
}